<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/container"
        android:theme="@style/AppTheme" android:background="@color/black">
    <TextView
            android:text="000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewPoints"
            android:layout_gravity="top|left"

            android:textColor="@color/points"/>
    <TextView
            android:text="0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewRounds"
            android:layout_gravity="bottom|center"
            android:textColor="@color/points"
    />
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewCountdown"
            android:layout_gravity="top|right"
            android:textColor="@color/points"
    />
</FrameLayout>